end

alias o='open'

alias s='du -sh * | sort -h'
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

function mkcd
    mkdir -pv $argv;
    cd $argv;
end

# get dotfiles status
function gitdir
    git -C $argv;
end

function gitdot
    git -C ~/.dotfiles $argv;
end
